            <TextBox x:Name="Motif_ajout" Height="40" materialdesign:HintAssist.Hint="Motif" Margin="710,255,70,125" Grid.Row="1"/>
            <Border CornerRadius="20" Width="100" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Left" Background="#FF1FAB89" Margin="890,0,0,28" Grid.Row="1">
                <Button x:Name="Confirmer_Ajout"  VerticalAlignment="Bottom" Width="100" Background="Transparent" Content="Confirmer" Foreground="White" FontWeight="Bold" Margin="0,0,0,0"  BorderBrush="{x:Null}" Click="Confirmer_Ajout_Click" ></Button>
            </Border>
            <Border CornerRadius="20" Width="100" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Left" Background="#FF1FAB89" Margin="746,0,0,28" Grid.Row="1">
                <Button x:Name="Annuler_Ajout_Copy"  VerticalAlignment="Bottom" Width="100" Background="Transparent" Content="Annuler" Foreground="White" FontWeight="Bold" Margin="0,0,0,0"  BorderBrush="{x:Null}" Click="Annuler_Ajout_Click" />
            </Border>
            <Label  Content="Introduire un employé :" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="137,192,0,0"/>

            <ComboBox x:Name="liste_employes" HorizontalAlignment="Left" Margin="416,190,0,0" materialdesign:HintAssist.Hint="Choisir un emlpoye" VerticalAlignment="Top" Width="220"  IsTextSearchEnabled="false" Height="40" TextBoxBase.TextChanged="liste_employes_TextChanged" IsReadOnly="False" IsEditable="True"  IsTextSearchCaseSensitive="False" RenderTransformOrigin="0.24,2.25"/>
            <TextBox x:Name="durée" Height="40" materialdesign:HintAssist.Hint="Durée de remboursement(en mois)" Margin="416,49,364,331" Grid.Row="1"/>
            <DatePicker x:Name="Date_prem_paiement" Height="40" materialdesign:HintAssist.Hint="Date de premier paiement" Margin="710,154,70,226" RenderTransformOrigin="0.512,-0.35" Width="220" Grid.Row="1"/>
            <Label Content="*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,248,0,0" Foreground="Red" FontSize="20" Grid.Row="1"/>
            <Label Content="*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="380,145,0,0" Foreground="Red" FontSize="20" Grid.Row="1"/>
            <Label Content="*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="679,145,0,0" Foreground="Red" FontSize="20" Grid.Row="1"/>
            <Label Content="*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="380,40,0,0" Foreground="Red" FontSize="20" Grid.Row="1"/>
            <Label Content="*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="679,40,0,0" Foreground="Red" FontSize="20" Grid.Row="1"/>
            <Label Content="*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,40,0,0" Foreground="Red" FontSize="20" Grid.Row="1"/>
            <Label Content="*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,145,0,0" Foreground="Red" FontSize="20" Grid.Row="1"/>

        </Grid>
        
        <Grid x:Name="suivi" Background="White" Visibility="Hidden" >
            <Border x:Name="border_emploue" BorderBrush="#FF1FAB89" BorderThickness="3"  HorizontalAlignment="Left" Height="155" Margin="20,20,0,0" VerticalAlignment="Top" Width="460">
                <Grid Margin="-3">
                    <Label Content="Informations Employe :" HorizontalAlignment="Left" Height="30" Margin="40,7,0,0" VerticalAlignment="Top" Width="190" Foreground="#FF1FAB89" FontSize="16" FontWeight="Bold"/>
                    <Label Content="Nom :" HorizontalAlignment="Left" Height="30" Margin="10,42,0,0" VerticalAlignment="Top" Width="60" Foreground="Black" FontSize="14" />
                    <Label Content="Prénom :" HorizontalAlignment="Left" Height="30" Margin="10,77,0,0" VerticalAlignment="Top" Width="73" Foreground="Black" FontSize="14" />
                    <TextBox x:Name="nom_info" HorizontalAlignment="Left" Height="30" Margin="240,38,0,0" VerticalAlignment="Top" Width="150" IsReadOnly="True"/>
