                <RowDefinition Height="23*"/>
                <RowDefinition Height="42*"/>
            </Grid.RowDefinitions>
            <Label  Content="Veuillez remplir le formulaire suivant :" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,25,0,0"/>
