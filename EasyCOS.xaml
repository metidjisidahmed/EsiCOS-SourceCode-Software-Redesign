                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="MediumAquamarine" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                        <Style TargetType="{x:Type DataGridRow}">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="MediumAquamarine" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
