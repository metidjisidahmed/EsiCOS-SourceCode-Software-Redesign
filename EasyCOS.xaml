                                <DataTemplate>
                                    <materialdesign:PopupBox Foreground="Black">
                                        <StackPanel>
                                        </StackPanel>
                                    </materialdesign:PopupBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
